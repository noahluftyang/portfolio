{
  "root": true,
  "extends": "prettier",
  "parserOptions": {
    "ecmaVersion": 2017
  },
  "env": {
    "node": true
  },
  "plugins": ["no-secrets", "prettier", "simple-import-sort"],
  "rules": {
    "no-secrets/no-secrets": "error",
    "prettier/prettier": "warn",
    "simple-import-sort/sort": "warn"
  },
  "overrides": [
    {
      "files": ["*.ts"],
      "parser": "@typescript-eslint",
      "parserOptions": {
        "project": "tsconfig.json",
        "sourceType": "module"
      }
    }
  ]
}
